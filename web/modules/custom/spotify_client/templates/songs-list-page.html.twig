<div class="content">
    {% for item in songs.tracks.items %}
    <div class="row">
        <div class="card col-md-12 mb-3">
            <div class="row no-gutters">
                <div class="col-md-2">
                    <img alt="{{ item.name }}" class="card-img card-img-song-list" src="{{ item.album.images[1].url }}">
                </div>
                <div class="col-md-10">
                    <div class="card-body">
                        <h5 class="card-title">
                            {{ item.name }}
                        </h5>
                        <p class="card-text">
                            {{ item.album.artists.0.name }}
                        </p>
                        <p class="card-text">
                          <a class="button" href="{{ path('spotify_client.songs_single', {'id' : item.id}) }}">
                            DETAIL
                          </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
